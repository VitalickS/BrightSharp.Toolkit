            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left">
                <Run>RenderZoom: </Run><Run Text="{Binding ElementName=zc, Path=RenderZoom}" />
            </TextBlock>
        </Grid>


    </Grid>
</Window>
